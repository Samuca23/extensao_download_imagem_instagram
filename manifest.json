{
    "manifest_version": 2,
    "name": "Download Imagem - Instagram",
    "version": "1.0",
    "description": "Download de imagens do Instagram",
    "icons": {
        "48": "logo_instagram.png",
        "128": "logo_instagram.png"
    },
    "background": {
        "scripts": ["src/background.js"],
        "persistent": false
    },
    "options_page": "src/pages/option.html",
    "browser_action": {
        "default_icon": {
            "19": "logo_instagram.png",
            "38": "logo_instagram.png"
        },
        "default_title": "Download Imagem - Instagram",
        "default_popup": "index.html"
    },
    "content_script": [
        {
            "js": [
                "src/components/button_dowload.js",
                "src/main.js"
            ],
            "matches": [
                "https://www.instagram.com/*"
            ]
        }
    ]
}