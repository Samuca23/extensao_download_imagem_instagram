{
    "manifest_version": 2,
    "name": "Download Imagem - Instagram",
    "version": "1.0",
    "description": "Download de imagens do Instagram",
    "icons": {
        "48": "img/logo_unidavi.png",
        "128": "img/logo_unidavi.png"
    },
    "background": {
        "scripts": ["src/background.js"],
        "persistent": false
    },
    "options_page": "src/pages/option.html",
    "browser_action": {
        "default_icon": {
            "19": "img/logo_unidavi.png",
            "38": "img/logo_unidavi.png"
        },
        "default_title": "Atalhos - Unidavi",
        "default_popup": "index.html"
    },
    "content_script": [
        {
            "js": [
                "src/main.js"
            ],
            "matches": [
                "*://*/*",
                "<all_urls>"
            ]
        }
    ]
}